{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6",
    "dom",
    "dom.iterable",
    "esnext"],
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
    "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
