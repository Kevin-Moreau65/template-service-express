{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
    "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
},
"ts-jest": {
  "require": ["tsconfig-paths/register"]
}
}
